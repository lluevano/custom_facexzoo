## Job

prefix="ft_tinyface"
network="MobileFaceNet"
depth=""
not_freeze_rate=1.0
lr=0.001
loss="ContrastiveLoss"

full_prefix="${prefix}/${network}${depth}/${loss}_nf${not_freeze_rate}_lr_${lr}"
mkdir -p ${full_prefix}

python train.py \
    --data_root '/idiap/temp/lluevano/tinyface/resized/' \
    --train_file './tinyface_train_list.lst' \
    --backbone_type "${network}" \
    --backbone_conf_file '../backbone_conf.yaml' \
    --head_type "${loss}" \
    --head_conf_file '../head_conf.yaml' \
    --lr ${lr} \
    --out_dir "${full_prefix}"\
    --epoches 19 \
    --step '10, 13, 16' \
    --print_freq 200 \
    --save_freq 3000 \
    --batch_size 128 \
    --momentum 0.9 \
    --log_dir "${full_prefix}" \
    --pretrain_model '/idiap/home/lluevano/bob_data/data/pytorch/MobileFaceNet-ca475a8d.pt.tar.gz/MobileFaceNet.pt' --resume\
    --tensorboardx_logdir 'mv-hrnet' \
    --fine_tune True \
    --not_freeze_rate ${not_freeze_rate} \
    2>&1 | tee "${full_prefix}/log.log"


